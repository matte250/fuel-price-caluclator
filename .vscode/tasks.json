{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Start hosting and database",
        "command": "./start.cmd",
        "presentation": {
            "group": "env",
            "reveal": "always",
            "panel": "dedicated",
        }
      },
      {
        "label": "Start functions shell",
        "type": "shell",
        "command": "firebase functions:shell",
        "presentation": {
            "group": "env",
            "reveal": "always",
            "panel": "dedicated",
        }
      },
      {
        "label": "Start dev enviroment",
        "dependsOn": ["Start hosting and database", "Start functions shell", "Open browser"],
        "runOptions": {
            "runOn": "folderOpen"
        }
      },
      {
        "label": "Open browser",
        "type": "shell",
        "command": "start http://localhost:5000",
      }
    ]
  }